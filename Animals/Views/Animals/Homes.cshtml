@model Animals.Models.GetAllHomeViewModel

@{
    ViewBag.Title = "title";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Homes</h2>

<table class="table table-striped">
    <tr>
        <th>Id</th>
        <th>Home Name</th>
        <th>Animals</th>
        @*<th>Actions</th>*@
    </tr>
    @foreach (var home in Model.Homes)
    {
        <tr>
            <td>@home.Id</td>
            <td>@home.Name</td>
            <td>
                <ol>
                    @foreach (var animal in home.Animals)
                    {
                        <li>@animal.Name (@animal.Type)</li>
                    }
                </ol>
            </td>
            @*<td>
                <a class="btn btn-success" href="/BookStore/EditBook/@animal.Id">Edit</a>
                <a class="btn btn-danger" href="/BookStore/Delete/@animal.Id">Delete</a>
                @Html.ActionLink("Remove", "Delete", new {id = book.Id})
            </td>*@
        </tr>
    }
</table>
